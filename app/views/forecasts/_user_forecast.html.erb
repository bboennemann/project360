<h1>Forecasts</h1>

<table width="100%" border="1">
  <thead>
    <tr>
      <th>Name</th>
      <th>Role</th>
        <% 35.times do |i| %>
        <th <%= day_style(first_monday_of_this_week + i) %>>
          <%= day_name_short(first_monday_of_this_week + i) %>
        </th>
        <% end %>      
    </tr>
  </thead>

  <tbody>
    <% @project.project_roles.each do |role| %>
      <tr>
        <td><%= role.user.email %></td>
        <td><%= role.role.name %></td>
        <% 35.times do |i| %>
        <td <%= day_style(first_monday_of_this_week + i) %>>
          <input type="text" name="" maxlength="3" size="3">
        </td>
        <% end %> 
      </tr>
    <% end %>
  </tbody>
</table>
