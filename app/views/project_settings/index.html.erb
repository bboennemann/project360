<p id="notice"><%= notice %></p>

<h1>Listing Project Settings</h1>

<table>
  <thead>
    <tr>
      <th>Default hours per day</th>
      <th>Workdays</th>
      <th>Default currency</th>
      <th>Project</th>
      <th>Organization</th>
      <th>Client</th>
      <th>Department</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project_settings.each do |project_setting| %>
      <tr>
        <td><%= project_setting.default_hours_per_day %></td>
        <td><%= project_setting.workdays %></td>
        <td><%= project_setting.default_currency %></td>
        <td><%= project_setting.project_id %></td>
        <td><%= project_setting.organization_id %></td>
        <td><%= project_setting.client_id %></td>
        <td><%= project_setting.department_id %></td>
        <td><%= link_to 'Show', project_setting %></td>
        <td><%= link_to 'Edit', edit_project_setting_path(project_setting) %></td>
        <td><%= link_to 'Destroy', project_setting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

